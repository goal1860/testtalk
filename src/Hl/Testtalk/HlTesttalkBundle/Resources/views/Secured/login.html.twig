{% extends 'HlTesttalkHlTesttalkBundle::layout.html.twig' %}
{% block title 'Login' %}
{% block content %}
    <h1 class="title">Login</h1>

    <p>
        This website is for automation demo purpose. Please use the credential to login: <em>user/userpass</em> 
    </p>

    {% if error %}
        <div class="error">{{ error.message }}</div>
    {% endif %}

    <form action="{{ path("_testtalk_security_check") }}" method="post" id="login">
        <div>
            <label for="username">Username</label>
            <input type="text" id="username" name="_username" value="{{ last_username }}" />
        </div>

        <div>
            <label for="password">Password</label>
            <input type="password" id="password" name="_password" />
        </div>

        <button type="submit" class="sf-button">
            <span class="border-l">
                <span class="border-r">
                    <span class="btn-bg">Login</span>
                </span>
            </span>
        </button>
    </form>
{% endblock %}


